{
    "description": "Superclass Survey",
    "states": [
      {
        "name": "Trigger",
        "type": "trigger",
        "transitions": [
          {
            "next": "nps",
            "event": "incomingMessage"
          },
          {
            "event": "incomingCall"
          },
          {
            "event": "incomingConversationMessage"
          },
          {
            "event": "incomingRequest"
          },
          {
            "event": "incomingParent"
          }
        ],
        "properties": {
          "offset": {
            "x": 0,
            "y": -80
          }
        }
      },
      {
        "name": "nps",
        "type": "send-and-wait-for-reply",
        "transitions": [
          {
            "next": "check_nps",
            "event": "incomingMessage"
          },
          {
            "event": "timeout"
          },
          {
            "event": "deliveryFailure"
          }
        ],
        "properties": {
          "offset": {
            "x": 20,
            "y": 370
          },
          "from": "{{flow.channel.address}}",
          "body": "üëã Ahoy!\n\nOn a scale of 1-10, how likely are you to recommend Superclass to a friend, family, or colleague?",
          "timeout": "3600"
        }
      },
      {
        "name": "check_nps",
        "type": "split-based-on",
        "transitions": [
          {
            "next": "unknown_answer_1",
            "event": "noMatch"
          },
          {
            "next": "feedback",
            "event": "match",
            "conditions": [
              {
                "friendly_name": "1-10",
                "arguments": [
                  "{{widgets.nps.inbound.Body}}"
                ],
                "type": "regex",
                "value": "^(?:[1-9]|0[1-9]|10)$"
              }
            ]
          }
        ],
        "properties": {
          "input": "{{widgets.nps.inbound.Body}}",
          "offset": {
            "x": 20,
            "y": 610
          }
        }
      },
      {
        "name": "unknown_answer_1",
        "type": "send-message",
        "transitions": [
          {
            "next": "nps",
            "event": "sent"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "offset": {
            "x": -510,
            "y": 480
          },
          "from": "{{flow.channel.address}}",
          "to": "{{contact.channel.address}}",
          "body": "I'm sorry, I didn't understand. Please enter a number from 1 - 10."
        }
      },
      {
        "name": "feedback",
        "type": "send-and-wait-for-reply",
        "transitions": [
          {
            "next": "send_results_to_sheets",
            "event": "incomingMessage"
          },
          {
            "next": "send_results_to_sheets",
            "event": "timeout"
          },
          {
            "event": "deliveryFailure"
          }
        ],
        "properties": {
          "offset": {
            "x": 20,
            "y": 900
          },
          "from": "{{flow.channel.address}}",
          "body": "Is there any other feedback you would like to share with us today? \n\n(üë®‚Äçüè´ When you respond to this, or wait 10 minutes, we will submit your responses to a Google Sheet...all using Studio!)",
          "timeout": "600"
        }
      },
      {
        "name": "thank_you",
        "type": "send-message",
        "transitions": [
          {
            "event": "sent"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "offset": {
            "x": 20,
            "y": 1440
          },
          "from": "{{flow.channel.address}}",
          "to": "{{contact.channel.address}}",
          "body": "We value your feedback! Thank you for sharing it! \n\nCheck out the Superclass README for more information on how to build this: https://twil.io/readme-on-demand \n\nWe can't wait to see what you build üöÄ"
        }
      },
      {
        "name": "send_results_to_sheets",
        "type": "make-http-request",
        "transitions": [
          {
            "next": "thank_you",
            "event": "success"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "offset": {
            "x": 20,
            "y": 1220
          },
          "method": "POST",
          "parameters": [
            {
              "value": "{{widgets.nps.inbound.Body}} ",
              "key": "NPS"
            },
            {
              "value": "{{widgets.feedback.inbound.Body}} ",
              "key": "Feedback"
            }
          ],
          "url": "https://script.google.com/macros/s/YOUR-ACTUAL-SCRIPT-HERE/exec",
          "timeout": 3600
        }
      }
    ],
    "initial_state": "Trigger",
    "flags": {
      "allow_concurrent_calls": true
    }
  }